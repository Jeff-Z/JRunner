<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".BellRingerActivity" >

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="43px"
        android:layout_marginTop="120px"
        android:contentDescription="HOMEPIC"
        android:src="@drawable/ic_bellringer" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageView"
        android:layout_below="@+id/imageView"
        android:layout_marginTop="30dp"
        android:text="开启检查服务"
        android:textSize="25sp" />
    
        
    <CheckBox
        android:id="@+id/checkBox_startService"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView1"
        android:layout_alignRight="@+id/imageView"
        android:text="" />
    
    
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageView"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="20dp"
        android:text="检查周期："
        android:textSize="20sp" />
    
    <Spinner
        android:id="@+id/spinner_period"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView2"
        android:layout_alignRight="@+id/imageView"
        android:entries="@array/period_type"
        android:spinnerMode="dropdown"
        android:textSize="20sp"
        android:textColor="#ACF1AC" />
    
    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageView"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="10dp"
        android:text="周期内跑步次数："
        android:textSize="20sp" />
    
    <Spinner
        android:id="@+id/spinner_times"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView3"
        android:layout_alignRight="@+id/imageView"
        android:entries="@array/run_times"
        android:spinnerMode="dropdown"
        android:textSize="20sp"
        android:textColor="#ACF1AC" />
    
    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageView"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="10dp"
        android:text="周期内跑步总程："
        android:textSize="20sp" />

    <Spinner
        android:id="@+id/spinner_length"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView4"
        android:layout_alignRight="@+id/imageView"
        android:entries="@array/run_length"
        android:spinnerMode="dropdown"
        android:textSize="20sp"
        android:textColor="#ACF1AC" />
        
    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageView"
        android:layout_below="@+id/textView4"
        android:layout_marginTop="10dp"
        android:text="提醒方式："
        android:textSize="20sp"/>

    <Spinner
        android:id="@+id/spinner_ring_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView5"
        android:layout_alignRight="@+id/imageView"
        android:entries="@array/remember_type"
        android:spinnerMode="dropdown"
        android:textSize="20sp"
        android:textColor="#ACF1AC" />
    
</RelativeLayout>